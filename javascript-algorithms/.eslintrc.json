{
  "extends": "airbnb",
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "jest": true
  },

  "parserOptions": {
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },

  "rules": {
    "no-plusplus": "off",
    "prefer-template": "error",
    "no-console": "off",
    "quotes": ["error", "double"],
    "comma-dangle": ["error", "never"],
    "no-var": "error",
    "prefer-destructuring": ["error", { "object": true, "array": true }],
    "max-lines": ["error", 200],
    "max-lines-per-function": ["error", 60],
    "max-depth": ["error", 4],
    "implicit-arrow-linebreak": "off",
    "arrow-parens": 0,
    "max-classes-per-file": 0,
    "function-paren-newline": 0
  }
}
